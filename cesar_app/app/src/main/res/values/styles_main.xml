<?xml version="1.0" encoding="utf-8"?>
<resources>

	<style name="MainTheme">
		<item name="android:layout_margin">@dimen/activity_horizontal_margin</item>
	</style>

	<style name="main.Light" parent="MainTheme">
		<item name="android:layout_margin">0dp</item>
		<item name="android:color">@color/colorAccent</item>
	</style>

	<style name="main.list" parent="main.Light">
		<item name="android:layout_margin">0dp</item>
		<item name="android:padding">4dp</item>
	</style>

	<style name="main.Item" parent="main.Light">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">200dp</item>
		<item name="android:background">@android:color/transparent</item>
		<item name="android:layout_margin">12dp</item>
		<item name="android:padding">4dp</item>
		<item name="android:gravity">center</item>
	</style>

	<style name="main.cardView" parent="CardView.Light">
		<item name="android:layout_height">150dp</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_margin">16dp</item>
	</style>

</resources>