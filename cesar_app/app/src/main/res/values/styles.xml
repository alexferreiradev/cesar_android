<resources>

	<!-- Base application theme. -->
	<style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
		<!-- Customize your theme here. -->
		<item name="windowActionBar">false</item>
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
	</style>

	<style name="progressBar" parent="Widget.AppCompat.ProgressBar">
		<item name="android:layout_centerInParent">true</item>
		<item name="android:padding">4dp</item>
		<item name="android:visibility">visible</item>
	</style>

	<style name="includedSupportActionBar" parent="AppTheme">
		<item name="android:layout_alignParentTop">true</item>
		<item name="android:layout_alignParentLeft">true</item>
		<item name="android:layout_alignParentRight">true</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
	</style>

	<style name="toobarActionBar" parent="AppTheme">
		<item name="android:layout_centerHorizontal">true</item>
		<item name="android:padding">4dp</item>
	</style>

	<style name="detail.textDetailsLabel" parent="AppTheme">
		<item name="android:textStyle">bold</item>
		<item name="android:textSize">28sp</item>
		<item name="android:text">@string/n_carregado</item>
		<item name="android:layout_margin">16dp</item>
		<item name="android:layout_marginBottom">24dp</item>
		<item name="android:textColor">@android:color/darker_gray</item>
	</style>

	<style name="detail.textDetails" parent="AppTheme">
		<item name="android:textStyle">normal</item>
		<item name="android:textSize">16sp</item>
		<item name="android:text">@string/n_carregado</item>
		<item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
		<item name="android:layout_marginTop">@dimen/activity_horizontal_margin</item>
		<item name="android:textColor">@android:color/black</item>
	</style>

	<style name="main.emptyText" parent="AppTheme">
		<item name="android:textSize">14sp</item>
		<item name="android:textColor">@android:color/black</item>
		<item name="android:textStyle">bold</item>
		<item name="android:gravity">center_horizontal</item>
		<item name="android:visibility">visible</item>
	</style>

</resources>
